<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="match_parent">

    <com.lcgsen.utils.refresh.DefaultNegativeRefreshers.BezierRefreshView
        android:id="@+id/bezier_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:Back_Color="#dddddd"
        app:Oval_Width="80dp"
        app:Rect_Width="40dp" />

    <LinearLayout
        android:id="@+id/rightview_move_area"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/rightview_change_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:src="@drawable/left" />

        <TextView
            android:id="@+id/dragtoloadmore_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="1"
            android:gravity="center"
            android:text="查看更多"
            android:textSize="10sp" />

    </LinearLayout>

</RelativeLayout>